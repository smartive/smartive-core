@model System.Collections.Immutable.IImmutableList<Smartive.Core.Debug.Mvc.Routing.RouteInformation>

<!doctype html>
<html lang="en-GB">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
          crossorigin="anonymous">
</head>

<body class="p-3">
<div class="container">
    <div class="row">
        <div class="col">
            <h3>Registered MVC Routes</h3>
        </div>
    </div>
    @foreach (var action in Model)
    {
        <div class="row">
            <div class="col mb-3">
                <div class="card">
                    <div class="card-header">
                        <span class="badge badge-@action.MethodCss">@action.Method</span> @action.Template
                    </div>
                    <div class="card-body">
                        @if (action.Area != null)
                        {
                            <div class="row">
                                <div class="col-2 text-muted">Area</div>
                                <div class="col-10">@action.Area</div>
                            </div>
                        }
                        <div class="row">
                            <div class="col-2 text-muted">Path</div>
                            <div class="col-10">@action.Path</div>
                        </div>
                        <div class="row">
                            <div class="col-2 text-muted">Invocation</div>
                            <div class="col-10">@action.Invocation</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
</body>

</html>
